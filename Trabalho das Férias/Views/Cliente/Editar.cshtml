
@{
    ViewBag.Title = "Editar";
}
<h3 >Editor de Cliente</h3>

<div class="row">
    <a href="/cliente/index" class="btn btn-primary float-left mb-3 ">
        Lista de Clientes
    </a>
</div>

<div class="row">

    <form method="post" action="/cliente/update">
        <input type="hidden" name="id" value="@ViewBag.Clientes.Id" />

        <div  class="form-group">
            <label for="campo-nome" class="col-12 pl-0 text-md">Nome</label>
            <input type="text" name="nome" class="form-control" value="@ViewBag.Clientes.Nome" />
        </div>

        <div class="form-group">
            <label for="campo-cpf" class="col-12 pl-0 text-md">Cpf</label>
            <input type="text" name="cpf" class="form-control" value="@ViewBag.Clientes.Cpf" />
        </div>

        <div class="form-group">
            <label for="campo-dataNascimento" class="col-12 pl-0 text-md">Data Nascimento</label>
            <input type="date" name="dataNascimento" class="form-control" value="@ViewBag.Clientes.DataNascimento" />
        </div>

        <div  class="form-group">
            <label for="campo-numero" class="col-12 pl-0 text-md">Número</label>
            <input type="text" name="numero" class="form-control" value="@ViewBag.Clientes.Numero" />
        </div>

        <div class="form-group">
            <label for="campo-complemento" class="col-12 pl-0 text-md">Complemento</label>
            <input type="text" name="complemento" class="form-control" value="@ViewBag.Clientes.Complemento" />
        </div>

        <div  class="form-group">
            <label for="campo-logradouro" class="col-12 pl-0 text-md">Logradouro</label>
            <input type="text" name="logradouro"  class="form-control" value="@ViewBag.Clientes.Logradouro" />
        </div>

        <div  class="form-group">
            <label for="campo-cep" class="col-12 pl-0 text-md">Cep</label>
            <input type="text" name="cep"  class="form-control" value="@ViewBag.Clientes.Cep" />
        </div>

        <div  class="form-group">
            <label form="campo-cidade" class="col-12 pl-0 text-md">Cidade</label>
            <select  class="form-control" name="cidade">
                @foreach (Model.Cidade cidade in ViewBag.Cidades)
                {
                    <option value="@cidade.Id">@cidade.Nome</option>

                }
            </select>
        </div>

        <button type="submit" class="btn btn-success mt-3">Salvar</button>
    </form>
</div>
