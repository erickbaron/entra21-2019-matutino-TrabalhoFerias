
@{
    ViewBag.Title = "Cadastro";
}
<h3>Cadastro de Clientes</h3>
<div class="row">
    <a href="/usuario/index" class="btn btn-primary float-left mb-3 ">
        Lista de Usuários
    </a>
</div>
<div class="row">
    <form class="mt-3" method="post" action="/usuario/store">


        <div class="form-group">
            <label for="campo-nome" class="col-12 pl-0 text-md">Nome</label>
            <input type="text" name="nome" class="form-control" id="campo-nome" />
        </div>

        <div class="form-group">
            <label for="campo-login"  class=" col-12 pl-0 text-md">Login</label>
            <input type="text" name="login" class="form-control" id="campo-login" />
        </div>

        <div class="form-group">
            <label for="campo-senha"  class=" col-12 pl-0 text-md">Senha</label>
            <input type="password" name="senha" class="form-control" id="campo-senha" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success mt-3">Salvar</button>
        </div>
    </form>
</div>