@{
    ViewBag.Title = "Index";
}
<h3>Lista de Cidades</h3>
<div class="row">
    <div class="col-12 p-0">
        <a href="/cidade/cadastro" class="btn btn-primary float-left mb-3">
            Nova Cidade
        </a>
    </div>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th class="border border-dark text-center bg-dark text-light">Cód</th>
                <th class="border border-dark text-center bg-dark text-light">Nome</th>
                <th class="border border-dark text-center bg-dark text-light">Número de Hab.</th>
                <th class="border border-dark text-center bg-dark text-light">Id Estado</th>
                <th class="border border-dark text-center bg-dark text-light">Ação</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th class="border border-dark text-center bg-dark text-light">Cód</th>
                <th class="border border-dark text-center bg-dark text-light">Nome</th>
                <th class="border border-dark text-center bg-dark text-light">Número de Hab.</th>
                <th class="border border-dark text-center bg-dark text-light">Id Estado</th>
                <th class="border border-dark text-center bg-dark text-light">Ação</th>

            </tr>
        </tfoot>
        <tbody>

            @foreach (Model.Cidade cidade in ViewBag.Cidade)
            {
                <tr>
                    <td class="border border-dark text-center  p-4">@cidade.Id</td>
                    <td class="border border-dark text-center  p-4">@cidade.Nome</td>
                    <td class="border border-dark text-center  p-4">@cidade.NumeroHabitantes</td>
                    <td class="border border-dark text-center  p-4">@cidade.IdEstado</td>
                    <td class="border border-dark text-center ">
                        
                            <div class="btn-group d-flex justify-content-center" role="group">
                                <a href="/cidade/editar?id=@cidade.Id" class="btn btn-primary">Editar
                                </a>
                                <a href="/cidade/apagar?id=@cidade.Id" class="btn btn-danger">Apagar
                                </a>
                            </div>
                            


                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>

