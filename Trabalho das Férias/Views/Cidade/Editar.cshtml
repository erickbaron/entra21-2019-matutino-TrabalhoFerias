@{
    ViewBag.Title = "Editar";
}

<h3 class="mt-20">Editor de Cidades</h3>

<div class="row">
    <a href="/cidade/index" class="btn btn-primary float-left mb-3 ">
        Lista de Cidades
    </a>
</div>


<div class="row">
    <form method="post" action="/cidade/update">
        <input type="hidden" name="id" value="@ViewBag.Cidades.Id" />

        <div class="form-group">
            <label for="campo-nome" class="col-12 pl-0 text-md">Nome</label>
            <input type="text" class="form-control" name="nome" id="campo-nome" value="@ViewBag.Cidades.Nome" />
        </div>

        <div class="form-group">
            <label for="campo-numero-habitantes" class="col-12 pl-0 text-md">Número de Habitantes</label>
            <input type="text" name="numeroHabitantes" class="form-control" id="campo-numero-habitantes" value="@ViewBag.Cidades.NumeroHabitantes" />
        </div>

        <div class="form-group">
            <label for="campo-estado">Estado</label>
            <select name="estado" id="campo-estado" class="form-control" value="@ViewBag.Cidades.IdEstado">
                @foreach (Model.Estado estado in ViewBag.Estados)
                {
                    <option value="@estado.Id">@estado.Nome</option>

                }
            </select>
        </div>

        <button class="btn btn-success mt-3" type="submit">Salvar</button>
    </form>
</div>
