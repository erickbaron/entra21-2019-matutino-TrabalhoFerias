
@{
    ViewBag.Title = "Editar";
}

<h3>Editor de tarefas</h3>

<div class="row">
    <a href="/tarefa/index" class="btn btn-primary float-left mb-3 ">
        Lista de Tarefas
    </a>
</div>

<div class="row">
<form method="post" action="/tarefa/update">
    <input type="hidden" name="id" value="@ViewBag.Tarefas.Id" />

            <div class="form-group">
                <label for="campo-titulo" class="col-12 pl-0 text-md">Título</label>
                <input type="text" name="titulo" class="form-control" id="campo-titulo" value="@ViewBag.Tarefas.Titulo" />
            </div>

            <div class="form-group">
                <label for="campo-descricao" class="col-12 pl-0 text-md">Descrição</label>
                <textarea type="text" name="descricao" class="form-control" id="campo-descricao" value="@ViewBag.Tarefas.Descricao">@ViewBag.Tarefas.Descricao</textarea>
            </div>

            <div class="form-group">
                <label for="campo-duracao" class="col-12 pl-0 text-md">Duração</label>
                <input type="datetime" name="duracao" class="form-control" id="campo-duracao" value="@ViewBag.Tarefas.Duracao" />
            </div>

            <div class="form-group">
                <label for="campo-usuario" class="col-12 pl-0 text-md">Usuário</label>
                <select name="usuario" id="campo-usuario" class="form-control">
                    @foreach (Model.Usuario usuario in ViewBag.Usuarios)
                    {
                            <option value="@usuario.Id" selected="selected">@usuario.Nome</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="campo-projeto" class="col-12 pl-0 text-md">Projeto</label>
                <select name="projeto" id="campo-projeto" class="form-control">
                    @foreach (Model.Projeto projeto in ViewBag.Projetos)
                    {
                            <option value="@projeto.Id" selected="selected">@projeto.Nome</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="campo-categoria" class="col-12 pl-0 text-md">Categoria</label>
                <select name="categoria" id="campo-categoria" class="form-control">
                    @foreach (Model.Categoria categoria in ViewBag.Categorias)
                    {
                            <option value="@categoria.Id" selected="selected">@categoria.Nome</option>
                    }
                </select>
            </div>

        <button type="submit" class="btn btn-success">Salvar</button>
</form>
</div>
