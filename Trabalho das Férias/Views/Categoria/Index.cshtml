
@{

    ViewBag.Title = "Index";
}
<h3>Lista de Categorias</h3>
<div class="row">
    <div class="col-12">
        <a href="/categoria/cadastro" class="btn btn-primary float-left mb-3">
            <i class="fas fa-plus"></i> Nova Categoria
        </a>
    </div>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th class="border border-dark text-center bg-dark text-light">Código</th>
                <th class="border border-dark text-center bg-dark text-light">Nome</th>
                <th class="border border-dark text-center bg-dark text-light">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Model.Categoria categoria in ViewBag.Categorias)
            {
                <tr>
                    <td class="border border-dark text-center  p-4">@categoria.Id</td>
                    <td class="border border-dark text-center  p-4">@categoria.Nome</td>
                    <td>
                        <div class="btn-group d-flex justify-content-center">
                        <a href="/categoria/editar?id=@categoria.Id" class="btn btn-primary"><i class="fas fa-pen"></i> Editar</a>
                        <a href="/categoria/apagar?id=@categoria.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Apagar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th class="border border-dark text-center bg-dark text-light">Código</th>
                <th class="border border-dark text-center bg-dark text-light">Nome</th>
                <th class="border border-dark text-center bg-dark text-light">Ação</th>
            </tr>
        </tfoot>
    </table>
</div>

