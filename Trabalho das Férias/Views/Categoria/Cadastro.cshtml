
@{
    ViewBag.Title = "Cadastro";
}

<h3 class="mt-20">Cadastro de Categorias</h3>
<div class="row">
    <a href="/categoria/index" class="btn btn-primary float-left mb-3 ">
        Lista de Categorias
    </a>
</div>
<div class="row">
    <form class="mt-3" method="post" action="/categoria/store">
        <div class="form-group">
            <label for="campo-nome">Nome</label>
            <input type="text" name="nome" class="form-control" id="campo-nome" />
        </div>
        <div class="form-group">
            <button class="btn btn-success mt-3" type="submit">Salvar</button>
        </div>
    </form>

</div>

